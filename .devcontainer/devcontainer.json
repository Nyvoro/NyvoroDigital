{
  "name": "mvp-client",
  "image": "mcr.microsoft.com/devcontainers/node:18-bullseye",  // ← 100 % verfügbar
  // oder kürzer: "mcr.microsoft.com/devcontainers/node:18"

  "features": {
    "ghcr.io/devcontainers/features/pnpm:2": {},
    "ghcr.io/devcontainers-contrib/features/supabase-cli:1": {}
  },

  "remoteUser": "root",          // vermeidet UID-Ärger
  "forwardPorts": [3000],
  "postCreateCommand": "pnpm install",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  }
}
